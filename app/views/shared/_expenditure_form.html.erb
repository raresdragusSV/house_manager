<h2 class="text-center"><span class="label label-primary">Create Expenditure</span></h2>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_for @expenditure, class: 'form-horizontal' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :description , class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: 'form-control', rows: 3 %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :value, class: 'col-sm-2 control-label'%>
        <div class="col-sm-10">
          <%= f.number_field :value, class:'form-control', required: :required %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :until, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :until, class: 'form-control',  required: :required %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :to_all, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
           <%= f.check_box :to_all, { checked: true }, "true", "false"  %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 ">
          <div id="forall" style="display: none;">
            <%= f.fields_for :expenditureusers do |eu| %>
              <div class="fields clearfix">
                <%= eu.hidden_field :user_id, class: 'expusers' %>
                <%= eu.object.user.name %>
                <%= eu.hidden_field :_destroy, class:'destroy' %>
                <%= link_to 'Remove', '#', class: 'remove_fields btn btn-sm btn-danger pull-right' %>
              </div>
              <br>
            <% end %>
          </div>
        </div>
        <%= f.submit "Create", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>
