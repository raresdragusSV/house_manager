<h1 class="center">Sign in</h1>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'col-sm-2 control-label'%>
        <div class="col-sm-10">
          <%= f.text_field :email, class:'form-control', placeholder: 'Enter your email', required: :required %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
           <%= f.password_field :password, class:'form-control', placeholder: 'Enter your password', required: :required %>
        </div>
      </div>

      <p class="center"><%= link_to 'Forgot password', new_password_reset_path, class: 'center' %></p>
      <%= f.submit "Sign in", class: "btn btn-lg btn-primary" %>
    <% end %>
    <br><br>

    <p class="center">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

